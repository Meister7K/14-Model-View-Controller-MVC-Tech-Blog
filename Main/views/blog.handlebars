<div class="">
    <div>
        <h2>{{title}}</h2>
        <h4> {{body}} </h4>
        <p> 
            By: {{member.username}} on {{format_date date_created}}
        </p>
    </div>
    <br>
    <div>
        <h3>Comments:</h3>
        {{#each comments as |comment|}}
        <div class="">
            <h5>
                {{comment.comment_body}}
            </h5>
            <p>
                By: {{member.username}} on {{format_date date_created}}
            </p>
        </div>
        <br>
        {{/each}}
        {{#if logged_in}}
        <div>
            <form class="new-comment">
                <label for="newComment">Add a comment:</label>
                <textarea class="" id="newComment" name="newComment"></textarea>
                <button type="submit" class="">Add</button>
            </form>
        </div>
        {{/if}}
    </div>
</div>

<script src="/js/blog.js"></script>
